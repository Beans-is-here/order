<div class="px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto mt-6">
<%= form_with url: orders_path(tab: @tab, sort: @sort), method: :get, scope: :search, data: { turbo_frame: "order-list" }, class: "flex items-center p-2 border rounded space-x-4 border-gray-400 bg-gray-50" do |f| %>

    <div class="relative flex-1" data-controller="autocomplete" data-autocomplete-url-value="/orders/autocomplete" role="combobox">
      <!-- キーワード入力欄 -->
      <%= f.text_field :keyword, placeholder: "店舗名またはメニュー名", value: params.dig(:search, :keyword), class: "flex-1 border rounded p-2 w-32 sm:w-48",
      data: { autocomplete_target: "input" } %>  <%# autocompleteはinputイベント発生時に自動的に検索してくれる %>
      <input type="hidden" name="menu_name.id" data-autocomplete-target="hidden"/> <!-- 要確認！！ -->
      <!-- 補完結果 -->
      <ul data-autocomplete-target="results" role="listbox" class="absolute top-full left-0 w-full bg-white border border-gray-300 rounded-b shadow-lg z-10 max-h-60 overflow-y-auto">
      </ul>
      <%# hidden 不要なオプションを設定していたため %>
    </div>

    <!-- 検索ボタン -->
    <%= f.submit "検索", class: "bg-orange-400 text-white px-4 py-2 rounded hover:bg-orange-500 transition" %>

    <!-- リセットリンク -->
    <%= link_to orders_path(tab: @tab), data: { turbo_frame: "order-list" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
      </svg>
    <% end %>
  <% end %>
</div>