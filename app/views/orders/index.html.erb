<h2 class="text-2xl font-bold mt-2 text-center">オーダー記録</h2>

<div data-controller="tabs">
  <!-- タブボタン -->
  <div class="px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto mt-6">
    <div class="grid grid-cols-3">
      <% [["all", "すべて"], ["ordered", "オーダー済み"], ["wanted", "気になった"]].each do |key, label| %>
        <button data-action="click->tabs#change"
                data-tabs-target="tab"
                data-tab="<%= key %>"
                class="tab-button text-gray-500 text-lg border border-gray-200 rounded-sm py-2">
          <%= label %>
        </button>
      <% end %>
    </div>
  </div>
</div>
  <!-- 一覧描画部分 -->
  <turbo-frame id="order-list">
    <%= render partial: "orders/search_form", locals: { orders: @orders } %>
    <%= render partial: "orders/list", locals: { orders: @orders } %>
    <div class="mt-4 mb-4 flex justify-center">
      <%= paginate @orders, params: { tab: params[:tab] } %>
    </div> 
  </turbo-frame>

  <div class="pb-4 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto mt-6 flex flex-wrap gap-2 sm:gap-3 items-center justify-end sticky bottom-5 z-50 floating-btn" aria-label="登録する" title="登録する">
    <% common_btn_class = "bg-amber-500 text-white font-medium border border-white/40 rounded-lg hover:bg-amber-400 transition py-2 px-3 sm:py-2.5 sm:px-5 text-3xl whitespace-nowrap focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500" %>
      <%= link_to "+", new_order_path, class: common_btn_class %>
  </div>
</div>