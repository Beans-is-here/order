<header class="bg-amber-500 shadow w-full sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto flex justify-between items-center px-4 sm:px-6 lg:px-8 py-3">
    <h1 class="text-xl sm:text-2xl font-bold text-orange-900">
      <% if user_signed_in? %>
        <%= link_to orders_path do %>
          <%= image_tag "icon.png", alt: "Order ロゴ", class: "h-8 sm:h-10 w-auto" %>
        <% end %>
      <% else %>
        <%= link_to root_path do %>
          <%= image_tag "icon.png", alt: "Order ロゴ", class: "h-8 sm:h-10 w-auto" %>
        <% end %>
      <% end %>
    </h1>

    <div class="flex flex-wrap gap-2 sm:gap-3 items-center justify-end">
      <% common_btn_class = "bg-amber-500 text-white font-medium border border-white/40 rounded-lg hover:bg-amber-400 transition py-2 px-3 sm:py-2.5 sm:px-5 text-sm whitespace-nowrap focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500" %>
      <% if user_signed_in? %>
        <%= link_to t("header.record"), new_order_path, class: common_btn_class %>

        <%= form_with url: destroy_user_session_path, method: :delete, class: "inline" do %>
          <%= button_tag t("header.sign_out"), type: "submit", class: common_btn_class %>
        <% end %>
      <% else %>
        <%= link_to t("header.sign_up"), new_user_registration_path, class: common_btn_class %>
        <%= link_to t("header.sign_in"), new_user_session_path, class: common_btn_class %>
      <% end %>
    </div>
  </nav>
</header>
