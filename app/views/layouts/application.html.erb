<!DOCTYPE html>
<html>
  <head>
    <title>Order?</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-YFYHBGV40Z"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-YFYHBGV40Z');
</script>

    <%= yield :head %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="min-h-screen flex flex-col bg-orange-100 text-gray-800">
    <%= render "shared/header" %>

    <!-- login用 -->
    <div class="w-full max-w-lg mx-auto px-4 mt-4">
      <%= render "shared/flash_messages" %>
    </div>
    
    <!-- order status変更時用 -->
    <div id="flash" class="w-full max-w-lg mx-auto px-4 mt-4">
      <%render "shared/flash_messages" %>
    </div>

    <main class="flex-grow">

    <% if controller_name == 'orders' && action_name == 'index' %>
      <%= render 'shared/recommendation_popup' %>
    <% end %>
   
    <%= yield %> 
    <!-- message -->
    <!-- <p class="notice"><%= notice %></p> -->
    <!-- <p class="alert"><%= alert %></p> -->
    </main>
  </body>

  
  <footer>
  <%= render "shared/footer" %>
  </footer>
</html>
